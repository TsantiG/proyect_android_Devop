<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_white_nice"
    tools:context=".MainActivity"
    android:padding="@dimen/dp_15"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="@dimen/dp_15"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:background="#DE838383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_home_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <Button
                    android:id="@+id/btn_login_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresar"
                    android:drawableRight="@drawable/icon_user"
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent" />


                <Button
                    android:id="@+id/btn_register_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear Cuenta"
                    android:drawableRight="@drawable/icon_register"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent" />
            </LinearLayout>


            <ImageView
                android:id="@+id/img_home"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/shield_sin_fondo_1"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="350dp">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:paddingBottom="16dp">

     <androidx.cardview.widget.CardView
         android:id="@+id/cv_descripcion"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="15dp"
         android:padding="@dimen/dp_15"
         app:cardCornerRadius="10dp"
         app:cardElevation="4dp"
         android:background="#DE838383"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent">

     <LinearLayout
         android:id="@+id/ll_home_descripcion"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:padding="16dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="Bienvenido"
             android:layout_margin="@dimen/dp_5"
             android:textSize="20sp"
             android:textColor="#DE838383"
             />


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/text_descripcion_home"
             android:textSize="20sp"
             android:textColor="@color/black"
             />

     </LinearLayout>

         <androidx.cardview.widget.CardView
             android:id="@+id/cv_inf"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="15dp"
             android:padding="@dimen/dp_15"
             app:cardCornerRadius="10dp"
             app:cardElevation="2dp"
             android:background="#DE838383"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent">

             <LinearLayout
                 android:id="@+id/ll_home_inf"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:padding="16dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Contactos:"
                     android:textSize="20sp"
                     android:textColor="#DE838383"

                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Correo: james.monroe@examplepetstore.com"
                     android:autoLink="email"
                     android:layout_marginTop="@dimen/dp_5"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Telefono: 55440390"
                     android:layout_marginTop="@dimen/dp_5"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="pagina web: www.depov.com"
                     android:autoLink="web"
                     android:layout_marginTop="@dimen/dp_5"
                     android:layout_marginBottom="@dimen/dp_5"
                     />

                 <LinearLayout
                     android:id="@+id/ll_home_redes"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     >

                     <ImageView
                         android:id="@+id/img_twitter_home"
                         android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:padding="@dimen/dp_10"
                         android:src="@drawable/twiter_sin_fondo"
                         android:layout_marginStart="@dimen/dp_60"
                         />

                     <ImageView
                         android:id="@+id/img_facebook_home"
                         android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:padding="@dimen/dp_10"
                         android:src="@drawable/facebook_sin_fondo"
                         android:layout_marginStart="@dimen/dp_20"
                         />
                     <ImageView
                         android:id="@+id/img_instagram_home"
                         android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:padding="@dimen/dp_10"
                         android:src="@drawable/instagram_sin_fondo"
                         android:layout_marginStart="@dimen/dp_20"
                         />

                 </LinearLayout>
             </LinearLayout>
         </androidx.cardview.widget.CardView>
     </androidx.cardview.widget.CardView>


     </LinearLayout>
 </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>